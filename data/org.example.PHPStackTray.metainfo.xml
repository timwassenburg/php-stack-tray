<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.example.PHPStackTray</id>
  <name>PHP Stack Tray</name>
  <summary>System tray application for PHP development on Linux</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>
      PHP Stack Tray is a system tray application for PHP development on Linux.
      Manage nginx, PHP-FPM, MySQL/MariaDB, virtual hosts, and more from your system tray.
    </p>
    <p>Features:</p>
    <ul>
      <li>Start, stop, and restart services with a simple click</li>
      <li>View service status at a glance</li>
      <li>Toggle Xdebug with one click</li>
      <li>Switch between PHP versions</li>
      <li>Manage virtual hosts</li>
      <li>Quick access to logs and config files</li>
    </ul>
  </description>

  <launchable type="desktop-id">org.example.PHPStackTray.desktop</launchable>

  <url type="homepage">https://github.com/yourusername/php-stack-tray</url>
  <url type="bugtracker">https://github.com/yourusername/php-stack-tray/issues</url>

  <developer id="org.example">
    <name>Tim Wassenburg</name>
  </developer>

  <content_rating type="oars-1.1" />

  <releases>
    <release version="0.1.0" date="2026-01-14">
      <description>
        <p>Initial release with support for:</p>
        <ul>
          <li>Nginx</li>
          <li>MySQL/MariaDB</li>
          <li>PHP-FPM</li>
          <li>Xdebug toggle</li>
          <li>Virtual hosts management</li>
        </ul>
      </description>
    </release>
  </releases>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
</component>
